#include <stdio.h>

int getTemperatureStatus(int temp)
{
    if (temp > 50)
        return 2;   // Overheat
    else if (temp >= 20 && temp <= 50)
        return 1;   // Normal
    else
        return 0;   // Low Temp
}

int main(void)
{
    int temp = 0;
    int status = 0;

    while (1)
    {
        printf("Enter temperature (-100 to stop): ");

        if (scanf("%d", &temp) != 1)
        {
            printf("Invalid input\n");
            return 1;
        }

        if (temp == -100)
        {
            printf("System Stopped\n");
            break;
        }

        status = getTemperatureStatus(temp);

        if (status == 2)
            printf("OVERHEAT\n");
        else if (status == 1)
            printf("NORMAL\n");
        else
            printf("LOW TEMP\n");
    }

    return 0;
}
